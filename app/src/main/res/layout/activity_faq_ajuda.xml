<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/titleFaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            android:text="Ajuda e FAQ"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Pergunta 1 -->
        <LinearLayout
            android:id="@+id/q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvQ1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Como faço login?"
                android:textColor="#1E90FF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvA1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Use seu nome de usuário e senha cadastrados. Se esquecer a senha, contate o suporte."
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Pergunta 2 -->
        <LinearLayout
            android:id="@+id/q2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvQ2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Como cadastrar?"
                android:textColor="#32CD32"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvA2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Clique em cadastrar e preencha os dados necessários."
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Pergunta 3 -->
        <LinearLayout
            android:id="@+id/q3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvQ3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Como editar meu perfil?"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvA3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Acesse seu perfil e clique em editar."
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Pergunta 4 -->
        <LinearLayout
            android:id="@+id/q4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvQ4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Como excluir minha conta?"
                android:textColor="#FF4500"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvA4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Entre em contato com o suporte para exclusão."
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Pergunta 5 -->
        <LinearLayout
            android:id="@+id/q5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvQ5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Problemas de acesso?"
                android:textColor="#8A2BE2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvA5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Verifique sua conexão ou entre em contato com o suporte."
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Botão -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#8A2BE2"
            android:text="Voltar para o início"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
